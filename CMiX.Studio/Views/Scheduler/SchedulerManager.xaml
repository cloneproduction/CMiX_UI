<UserControl x:Class="CMiX.Studio.Views.Scheduler.SchedulerManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CMiX.Studio.Views.Scheduler"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Button Height="20" 
                Margin="2"
                Content="Add New Scheduler" 
                Command="{Binding CreateSchedulerCommand}"/>

        <Button Height="20"
                Margin="2"
                Content="Delete Scheduler"
                Command="{Binding DeleteSchedulerCommand}"/>

        <ComboBox Height="20"
                  Margin="2"
                  ItemsSource="{Binding CompositionSchedulers}"
                  SelectedItem="{Binding SelectedScheduler}"
                  SelectedIndex="{Binding SelectedSchedulerIndex}"
                  DisplayMemberPath="Name"/>

        <Border Visibility="{Binding SelectedScheduler, Converter={StaticResource NullToVisibility}}">
            <local:CompositionScheduler DataContext="{Binding SelectedScheduler}"/>
        </Border>
    </StackPanel>
</UserControl>
