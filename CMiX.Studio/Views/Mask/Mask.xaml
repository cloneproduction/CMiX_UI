<UserControl x:Class="CMiX.Studio.Views.Mask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModels="clr-namespace:CMiX.Core.Presentation.ViewModels;assembly=CMiX.Core"
             xmlns:local="clr-namespace:CMiX.Studio.Views"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ObjectDataProvider x:Key="MaskType" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="ViewModels:MaskType"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider x:Key="MaskControlType" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="ViewModels:MaskControlType"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </UserControl.Resources>
    

    <StackPanel>
        <Grid 
            Margin="0, 4"
            DockPanel.Dock="Bottom"
            Height="20" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock 
                Grid.ColumnSpan="2"
                Foreground="{StaticResource TextBase}"
                Text="Use"/>
            <ComboBox 
                Grid.Column="2"
                Height="20"
                SelectedItem="{Binding MaskType}"
                ItemsSource="{Binding Source={StaticResource MaskType}}"/>
        </Grid>
        <Grid 
            Margin="0, 4"
            DockPanel.Dock="Bottom"
            Height="20" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock 
                Grid.ColumnSpan="2"
                Foreground="{StaticResource TextBase}"
                Text="To Control"/>
            <ComboBox 
                Grid.Column="2"
                DockPanel.Dock="Bottom"
                Height="20"
                SelectedItem="{Binding MaskControlType}"
                ItemsSource="{Binding Source={StaticResource MaskControlType}}"/>
        </Grid>
    </StackPanel>

</UserControl>
