<UserControl x:Class="CMiX.Studio.Views.Stepper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:CMiX.Studio.Views"
             xmlns:ViewModels="clr-namespace:CMiX.Core.Presentation.ViewModels;assembly=CMiX.Core"
             xmlns:Controls="clr-namespace:CMiX.Core.Presentation.Controls;assembly=CMiX.Core"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="636.667"
             d:DesignWidth="316.667"
             mc:Ignorable="d">
    
    <StackPanel>
        <Grid Margin="0, 2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock 
                Text="Steps" 
                Padding="4" 
                Foreground="{DynamicResource TextBase}" 
                HorizontalAlignment="Right"/>
            <Controls:Counter
                Value="{Binding StepCount}"
                Grid.Column="1"
                Style="{StaticResource CMiXCounterStyle}"
                Height="21"/>
        </Grid>
    </StackPanel>
</UserControl>