<UserControl x:Class="CMiX.Studio.Views.Randomized"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:CMiX.Studio.Views"
             xmlns:ViewModels="clr-namespace:CMiX.Core.Presentation.ViewModels;assembly=CMiX.Core"
             xmlns:Controls="clr-namespace:CMiX.Core.Presentation.Controls;assembly=CMiX.Core"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="636.667"
             d:DesignWidth="316.667"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="SteadyType" MethodName="GetValues" ObjectType="{x:Type ViewModels:SteadyType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="ViewModels:SteadyType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="LinearType" MethodName="GetValues" ObjectType="{x:Type ViewModels:LinearType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="ViewModels:LinearType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    
    
    <Border IsEnabled="{Binding IsEnabled}">
        <StackPanel>
            <Grid Height="21" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right" 
                    Text="Type" 
                    Padding="4, 0" 
                    Foreground="{DynamicResource TextBase}"/>
                <ComboBox 
                    Grid.Column="1"
                    ItemsSource="{Binding Source={StaticResource SteadyType}}"
                    SelectedItem="{Binding SteadyType}"/>
            </Grid>
            <Border Margin="0,2">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SteadyType}"  Value="{x:Static ViewModels:SteadyType.Random}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid Height="21" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right" 
                        Text="Alignment" 
                        Padding="4, 0" 
                        Foreground="{DynamicResource TextBase}"/>
                    <ComboBox Grid.Column="1"
                        ItemsSource="{Binding Source={StaticResource LinearType}}"
                        SelectedItem="{Binding LinearType}"/>
                    <!--<Controls:Counter Style="{StaticResource CMiXCounterStyle}" Grid.Column="1"/>-->
                </Grid>
            </Border>
            <Border Margin="0,2">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SteadyType}"  Value="{x:Static ViewModels:SteadyType.Linear}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid Height="21" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right" 
                        Text="Seed" 
                        Padding="4, 0" 
                        Foreground="{DynamicResource TextBase}"/>
                    <Controls:Counter Style="{StaticResource CMiXCounterStyle}" Value="{Binding Seed}" Grid.Column="1"/>
                </Grid>
            </Border>
        </StackPanel>
    </Border>

</UserControl>