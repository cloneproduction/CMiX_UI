<UserControl
    x:Class="CMiX.Camera"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Studio.Views"
    xmlns:Controls="clr-namespace:CMiX.Core.Presentation.Controls;assembly=CMiX.Core"
    xmlns:MVVM.Views="clr-namespace:CMiX.Core.Presentation.Views;assembly=CMiX.Core"
    xmlns:ViewModels="clr-namespace:CMiX.Core.Presentation.ViewModels;assembly=CMiX.Core"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="CameraControl"
    d:DesignHeight="282.741"
    d:DesignWidth="298.8"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="CameraView" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="ViewModels:CameraView"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="CameraRotation" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="ViewModels:CameraRotation"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="CameraLookAt" MethodName="GetNames" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="ViewModels:CameraLookAt"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <StackPanel>
        <Border
            Height="25"
            Margin="0, 0, 0, 2"
            Padding="4"
            DockPanel.Dock="Top">
            <TextBlock
                Margin="4, 0, 0, 0"
                Text="CAMERA"
                Foreground="{StaticResource TextBase}"/>
        </Border>
        <Border             
            Grid.Column="1"
            Style="{StaticResource BorderContainer}">
            <Views:BeatModifier DataContext="{Binding BeatModifier}"/>
        </Border>
        <Border             
            Grid.Column="1"
            Margin="0, 8"
            Style="{StaticResource BorderContainer}">
            <StackPanel DockPanel.Dock="Top">
                <Grid Height="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Padding="2"
                        Foreground="{StaticResource TextBase}"
                        VerticalAlignment="Center"
                        Text="Rotation"/>
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{Binding Source={StaticResource CameraRotation}}"
                        SelectedItem="{Binding Rotation}"/>
                </Grid>
                <Grid Margin="0, 2" Height="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Padding="2"
                        Foreground="{StaticResource TextBase}"
                        VerticalAlignment="Center"
                        Text="View"/>
                    <ComboBox
                        Grid.Column="1"
                        ItemsSource="{Binding Source={StaticResource CameraView}}"
                        SelectedItem="{Binding View}"/>
                </Grid>
                <Grid Height="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Padding="2"
                        Foreground="{StaticResource TextBase}"
                        VerticalAlignment="Center"
                        Text="LookAt"/>
                    <ComboBox
                        Grid.Column="2"
                        ItemsSource="{Binding Source={StaticResource CameraLookAt}}"
                        SelectedItem="{Binding LookAt}"/>
                </Grid>
            </StackPanel>
        </Border>
        <Border             
            Grid.Column="1"
            Style="{StaticResource BorderContainer}">
            <StackPanel>
                <Controls:CMiXSlider
                    Margin="0, 0, 0, 1"
                    Caption="FOV"
                    DockPanel.Dock="Top"
                    DataContext="{Binding FOV}"/>
                <Controls:CMiXSlider
                    Margin="0, 1, 0, 0"
                    Caption="Zoom"
                    DockPanel.Dock="Top"
                    DataContext="{Binding Zoom}"/>
            </StackPanel>
        </Border>
    </StackPanel>

</UserControl>