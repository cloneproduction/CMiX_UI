<UserControl x:Class="CMiX.Studio.Views.Project"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ViewsScheduler="clr-namespace:CMiX.Studio.Views.Scheduler"
             mc:Ignorable="d" d:DesignWidth="542.666" d:DesignHeight="388">


    <StackPanel>
        <Button Height="20" 
                Margin="2"
                Content="Add New Scheduler" 
                Command="{Binding CreateSchedulerCommand}"/>
        
        <Button Height="20"
                Margin="2"
                Content="Delete Scheduler"
                Command="{Binding DeleteSchedulerCommand}"/>
        
        <ComboBox Height="20"
                  Margin="2"
                  ItemsSource="{Binding CompositionSchedulers}"
                  SelectedItem="{Binding SelectedScheduler}"
                  DisplayMemberPath="Name"/>

        <Border Visibility="{Binding SelectedScheduler, Converter={StaticResource NullToVisibility}}">
            <ViewsScheduler:Scheduler DataContext="{Binding SelectedScheduler}"/>
        </Border>

    </StackPanel>


</UserControl>