<Window x:Class="CMiX.MVVM.Views.MessengerSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:CMiX.MVVM.Controls"
        xmlns:Behavior="clr-namespace:CMiX.MVVM.Behaviors"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Style="{StaticResource MessengerSettingsWindowStyle}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height"
        Title="Messenger Settings" Width="300" >
    
    <Window.InputBindings>
        <KeyBinding 
            Key="Esc" 
            Command="{Binding CancelCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
    </Window.InputBindings>
    
    <Border Padding="8" CornerRadius="0, 0, 4, 4" Background="{StaticResource HighDarkerColor}">
        <DockPanel>
            <Grid Height="30" DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button 
                    Behavior:FocusBehavior.IsFocused="{Binding OkIsFocused}"
                    Margin="2"
                    Grid.Column="0"
                    Content="OK"
                    Style="{StaticResource ButtonRounded}"
                    Command="{Binding OkCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
                <Button 
                    Margin="2"
                    Grid.Column="1" 
                    Content="Cancel"
                    Style="{StaticResource ButtonRounded}" 
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
                <Button 
                    Command="{Binding ApplyCommand}"
                    IsEnabled="{Binding CanApply}"
                    Margin="2"
                    Grid.Column="2" 
                    Content="Apply"
                    Style="{StaticResource ButtonRounded}" />
            </Grid>
            <StackPanel DockPanel.Dock="Top">
                <Grid Height="25" Margin="0, 1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Text="Name" 
                        Margin="0, 0, 8, 0"
                        Foreground="{StaticResource TextBase}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>
                    <TextBox
                        Behavior:FocusBehavior.IsFocused="True"
                        TabIndex="1"
                        Padding="4"
                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                        Grid.Column="1"
                        BorderThickness="0"
                        BorderBrush="{StaticResource DarkColor}"
                        Foreground="{StaticResource TextBase}"
                        Background="{StaticResource HighHighDarkerColor}"/>
                </Grid>
                <Grid Height="25" Margin="0, 1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Text="Engine" 
                        Margin="0, 0, 8, 0"
                        Foreground="{StaticResource TextBase}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>
                    <TextBox
                        TabIndex="1"
                        Padding="4"
                        Text="{Binding Topic, UpdateSourceTrigger=PropertyChanged}"
                        Grid.Column="1"
                        BorderThickness="0"
                        BorderBrush="{StaticResource DarkColor}"
                        Foreground="{StaticResource TextBase}"
                        Background="{StaticResource HighHighDarkerColor}"/>
                </Grid>
                <Grid Height="25" Margin="0, 1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Text="IP" 
                        Foreground="{StaticResource TextBase}"
                        HorizontalAlignment="Right"
                        Margin="0, 0, 8, 0"
                        VerticalAlignment="Center"/>
                    <Controls:IPBox 
                        TabIndex="3"
                        Grid.Column="1" 
                        IPAddress="{Binding IP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <Grid Height="25" Margin="0, 1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                    Text="Port" 
                    Margin="0, 0, 8, 0"
                    Foreground="{StaticResource TextBase}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
                    <TextBox
                        Style="{DynamicResource TextBoxNumbersOnly}"
                        TabIndex="4"
                        Padding="4"
                        Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                        Grid.Column="1"
                        BorderThickness="0"
                        BorderBrush="{StaticResource DarkColor}"
                        Foreground="{StaticResource TextBase}"
                        Background="{StaticResource HighHighDarkerColor}"/>
                </Grid>
                <Border Height="50" VerticalAlignment="Center" Margin="0, 8">
                    <TextBlock 
                        TextWrapping="WrapWithOverflow"  
                        Padding="8, 0" 
                        VerticalAlignment="Center" 
                        Text="{Binding ErrorMessage}" 
                        Foreground="{StaticResource TextBase}"/>
                </Border>
            </StackPanel>
            
        </DockPanel>
    </Border>
    
</Window>
