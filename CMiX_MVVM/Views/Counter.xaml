<UserControl
    x:Class="CMiX.MVVM.Views.Counter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="26.076"
    d:DesignWidth="174.778"
    mc:Ignorable="d">
    <DockPanel>
        <Grid>
            <Border 
                CornerRadius="4"
                x:Name="CounterBorder" 
                Background="{StaticResource DarkColor}">
                <TextBox
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    BorderThickness="0"
                    Background="{StaticResource HighDarkerColor}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Text="{Binding Count}"
                    Foreground="{StaticResource TextBase}"/>
            </Border>
            <Button
                x:Name="Add"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Width="20"
                Content="+"
                DockPanel.Dock="Right"
                Command="{Binding Path=AddCommand}"
                >
            </Button>
            <Button
                x:Name="Sub"
                HorizontalAlignment="Left"
                Grid.Column="0"
                Width="20"
                Content="-"
                DockPanel.Dock="Right"
                Command="{Binding Path=SubCommand}"
                >
            </Button>
        </Grid>
    </DockPanel>
</UserControl>