<UserControl x:Class="CMiX.Studio.Views.Layer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Views="clr-namespace:CMiX.Studio.Views"
             xmlns:Resources="clr-namespace:CMiX.Core.Resources;assembly=CMiX.Core"
             mc:Ignorable="d" 
             d:DesignHeight="529" d:DesignWidth="821">

    
    <Grid Background="{DynamicResource HighDarkerColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Views:PostFX 
            Grid.Column="0" 
            Margin="0, 0, 4, 0" 
            DataContext="{Binding PostFX}"/>
        <Views:Mask 
            Grid.Column="1" 
            Margin="4, 0, 0, 0" 
            DataContext="{Binding Mask}"/>

    </Grid>
</UserControl>
