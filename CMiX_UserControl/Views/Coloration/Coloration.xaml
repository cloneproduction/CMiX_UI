<UserControl
    x:Class="CMiX.Studio.Views.Coloration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:CMiX.Studio.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Tools="clr-namespace:CMiX.MVVM.Tools;assembly=CMiX.MVVM"
    d:DesignHeight="1870.805"
    d:DesignWidth="349.875"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <Tools:BindingProxy x:Key="ProjectProxy" Data="{Binding}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <Border Height="25" Margin="0, 0, 0, 2" Padding="4">
            <TextBlock
                Margin="4, 0, 0, 0"
                Text="COLORATION"
                Foreground="{StaticResource TextBase}"/>
        </Border>

        <Views:ColorSelector DataContext="{Binding ColorSelector}"/>

        <Expander IsExpanded="True" Header="Modifiers" Margin="0, 2" Style="{StaticResource ExpanderBase}">
            <Border Grid.Row="1" Style="{StaticResource BorderContainer}" Margin="0, 4, 0, 8">
                <Views:BeatModifier DataContext="{Binding BeatModifier}"/>
            </Border>
        </Expander>
        
    </StackPanel>
</UserControl>