<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="DataGrid">
        <!-- Make the border and grid lines a little less imposing -->
        <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource SuperHighDarkerColor}" />
        <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource HighHighDarkerColor}" />
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="AlternatingRowBackground" Value="Blue"/>
        <Setter Property="AlternationCount" Value="2"/>
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource DarkColor}" />
                    <Setter Property="Foreground" Value="{DynamicResource TextBase}" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource Color}" />
                        </Trigger>

                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="{DynamicResource DarkerColor}"/>
                        </Trigger>
                        <!--then override with my own colour-->
                        <DataTrigger Binding="{Binding InvoiceSet}" Value="True">
                            <Setter Property="Background" Value="Green"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
        
