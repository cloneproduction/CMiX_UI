<UserControl 
    x:Class="CMiXPlayer.Views.JobEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:Views="clr-namespace:CMiXPlayer.Views"
    mc:Ignorable="d" 
    d:DesignHeight="375.668" d:DesignWidth="528.666">

    <Border Style="{StaticResource BorderContainer}">
        <DockPanel Margin="4" Grid.Column="0">
            <Grid 
                DockPanel.Dock="Top" 
                Height="25"
                Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <TextBlock 
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Foreground="{StaticResource TextBase}"
                    Text="Name"
                    />
                <TextBox
                    VerticalContentAlignment="Center"
                    Text="{Binding JobName}"
                    Foreground="{StaticResource TextBase}"
                    Grid.Column="1"
                    DockPanel.Dock="Top"
                    BorderThickness="0"
                    Background="{StaticResource HighDarkerColor}"
                    />
            </Grid>
            <Grid 
                Margin="4" 
                DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <TextBlock 
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Foreground="{StaticResource TextBase}"
                    Text="Device"
                    />
                <ComboBox
                    Grid.Column="1"
                    DockPanel.Dock="Top"
                    Height="25"
                    ItemsSource="{Binding Devices}"
                    SelectedItem="{Binding SelectedDevice}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
            <Grid 
                Margin="4"
                DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <TextBlock 
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    Foreground="{StaticResource TextBase}"
                    Text="Playlist"
                    />
                <ComboBox
                    Grid.Column="1"
                    Height="25"
                    ItemsSource="{Binding Playlists}"
                    SelectedItem="{Binding SelectedPlaylist}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
            <Separator 
                Background="{StaticResource DarkColor}"
                Margin="16"
                DockPanel.Dock="Top"
                VerticalAlignment="Stretch"
                />
            <Views:ToRunType 
                Margin="4"
                DockPanel.Dock="Top"
                DataContext="{Binding ToRunType}"
                />
            <Button 
                Style="{StaticResource ButtonRounded}"
                Margin="16"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Width="200"
                Content="Add To Schedule"
                Height="50"
                Command="{Binding CreateJobCommand}"
                />
        </DockPanel>
    </Border>
</UserControl>